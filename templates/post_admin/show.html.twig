{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>PublicationDate</th>
                <td>{{ post.publicationDate ? post.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CommentCount</th>
                <td>{{ post.commentCount }}</td>
            </tr>
            <tr>
                <th>PublishedBy</th>
                <td>{{ post.publishedBy }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_admin_index') }}">back to list</a>

    <a href="{{ path('app_post_admin_edit', {'id': post.id}) }}">edit</a>

    {{ include('post_admin/_delete_form.html.twig') }}
{% endblock %}
