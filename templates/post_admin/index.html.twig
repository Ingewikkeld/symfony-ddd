{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>PublicationDate</th>
                <th>CommentCount</th>
                <th>PublishedBy</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.publicationDate ? post.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.commentCount }}</td>
                <td>{{ post.publishedBy }}</td>
                <td>
                    <a href="{{ path('app_post_admin_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('app_post_admin_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_post_admin_new') }}">Create new</a>
{% endblock %}
